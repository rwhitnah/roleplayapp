generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  Bytes
  salt      Bytes
  firstname String
  lastname  String

  roles        Role[]
  logiChapters Chapter[]
}

model Chapter {
  id   Int    @id @default(autoincrement())
  name String

  User User[]
}

enum Role {
  PLAYER
  LOGISTICS
  ADMIN
}

