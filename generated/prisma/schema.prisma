generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  Bytes
  salt      Bytes
  firstname String
  lastname  String

  signInCount Int @default(0)

  roles        Role[]
  logiChapters Chapter[]
  characters   Character[]
}

model Chapter {
  id   Int    @id @default(autoincrement())
  name String @unique

  User       User[]
  Characters Character[]
}

enum Role {
  PLAYER
  LOGISTICS
  ADMIN
}

model Character {
  id             Int     @id @default(autoincrement())
  name           String
  characterClass String
  startingXp     Decimal @default(25.0) @db.Decimal(10, 1)
  primarySchool  String?

  raceName String?
  subrace  String?

  undoXp Decimal @default(0.0) @db.Decimal(10, 1)

  discardedAt DateTime?

  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  chapter   Chapter @relation(fields: [chapterId], references: [id])
  chapterId Int
}
